{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <!-- Bloc extÃ©rieur large -->
    <div class="max-w-lg w-full space-y-8">

        <!-- Logo -->
        <div class="text-center">
            <img src="https://tse1.mm.bing.net/th/id/OIP.GdUWbrVtbNezIRl6jg_ymAHaEh?rs=1&pid=ImgDetMain&o=7&rm=3&adlt=strict"
                 alt="Logo"
                 class="mx-auto h-10 w-auto object-contain">
            <h2 class="mt-6 text-center text-2xl font-bold text-gray-900">Create your account</h2>
        </div>

        <!-- Messages d'erreur -->
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="p-3 text-sm text-red-700 bg-red-100 rounded-md">
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_errors(registrationForm) }}
                <div class="max-w-md mx-auto p-8 space-y-8">


        <!-- Formulaire -->
        {{ form_start(registrationForm, { attr: { class: 'bg-white shadow rounded-lg p-6 space-y-6' } }) }}

            <div>
                {{ form_label(registrationForm.email, 'Email address', { label_attr: { class: 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.email, { attr: { class: 'mt-1 p-2 block w-full rounded-md appearance-none bg-white border border-black shadow-sm focus:border-black focus:ring-black sm:text-sm' } }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, 'Password', { label_attr: { class: 'block text-sm font-medium text-gray-700' } }) }}
                {{ form_widget(registrationForm.plainPassword, { attr: { class: 'mt-1 p-2 block w-full rounded-md appearance-none bg-white border border-black shadow-sm focus:border-black focus:ring-black sm:text-sm' } }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'h-4 w-4 text-indigo-600 border-gray-300 rounded' } }) }}
                {{ form_label(registrationForm.agreeTerms, null, { label_attr: { class: 'ml-2 block text-sm text-gray-700' } }) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit"
                    class="w-full flex justify-center py-2 px-4 rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                Register
            </button>

        {{ form_end(registrationForm) }}

        <!-- Lien vers connexion -->
        <p class="mt-6 text-center text-sm text-gray-600">
            Already have an account?
            <a href="{{ path('app_login') }}" class="text-indigo-600 hover:underline">Sign in</a>
        </p>
        </div>
    </div>
</div>
{% endblock %}
